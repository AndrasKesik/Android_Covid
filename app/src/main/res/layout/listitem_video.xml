<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <RelativeLayout
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/videocard_userid"
            android:layout_marginLeft="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="userid"/>
        <ImageView
            android:id="@+id/videocard_firstline"
            android:layout_margin="2dp"
            android:layout_below="@id/videocard_userid"
            android:layout_width="150dp"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>
        <TextView
            android:id="@+id/videocard_description"
            android:layout_below="@id/videocard_firstline"
            android:text="description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/videocard_secondline"
            android:layout_margin="2dp"
            android:layout_below="@id/videocard_description"
            android:layout_width="300dp"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>
        <TextView
            android:id="@+id/videocard_downloadlink"
            android:layout_below="@id/videocard_secondline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="downlaodlink"/>


    </RelativeLayout>



</android.support.v7.widget.CardView>